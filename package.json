{
  "name": "Discipline",
  "version": "0.7.0",
  "author": "Alex <alex.borodach@gmail.com>",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest --silent=false",
    "bundle": "react-native bundle --platform ios --dev false --entry-file index.ios.js --bundle-output iOS/main.jsbundle",
    "lint:staged": "lint-staged",
    "prettify": "prettier --single-quote=true --trailing-comma=all --write **/**/*.js",
    "lint": "npm run lint:js",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:js": "npm run lint:eslint -- . "
  },
  "dependencies": {
    "assert": "1.3.0",
    "check-types": "5.0.0",
    "eventemitter3": "1.1.1",
    "haversine": "^1.0.1",
    "immutable": "^3.8.1",
    "lodash": "^4.17.4",
    "moment": "2.10.6",
    "moment-duration-format": "^1.3.0",
    "promise": "7.0.4",
    "react": "16.0.0-alpha.12",
    "react-mixin": "^2.0.2",
    "react-native": "0.47.1",
    "react-native-background-geolocation": "^2.8.3",
    "react-native-deprecated-custom-components": "^0.1.0",
    "react-native-device-info": "^0.9.9",
    "react-native-linear-gradient": "^2.0.0",
    "react-native-maps": "^0.15.2",
    "react-native-navbar": "^1.6.0",
    "react-native-shake-event": "^3.0.0",
    "react-native-side-menu": "^0.20.1",
    "react-navigation": "^1.0.0-beta.11",
    "react-redux": "4.4.5",
    "react-timer-mixin": "^0.13.3",
    "realm": "^1.10.1",
    "recompose": "^0.24.0",
    "redux": "3.5.2",
    "redux-actions": "0.11.0",
    "redux-thunk": "2.1.0"
  },
  "devDependencies": {
    "babel-eslint": "7.1.1",
    "babel-jest": "19.0.0",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-plugin-transform-remove-console": "^6.8.0",
    "babel-preset-react-native": "1.9.1",
    "eslint": "3.11.1",
    "eslint-config-airbnb": "13.0.0",
    "eslint-config-airbnb-base": "10.0.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "6.7.1",
    "jest": "19.0.0",
    "lint-staged": "^3.3.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.3",
    "react-test-renderer": "~15.6.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es6": true
    },
    "plugins": [
      "react",
      "jsx-a11y"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "arrow-parens": [
        "error",
        "always"
      ],
      "arrow-body-style": [
        2,
        "as-needed"
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "import/imports-first": 0,
      "import/newline-after-import": 0,
      "import/no-dynamic-require": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-named-as-default": 0,
      "import/no-unresolved": 2,
      "import/prefer-default-export": 0,
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "jsx-a11y/aria-props": 2,
      "jsx-a11y/heading-has-content": 0,
      "jsx-a11y/href-no-hash": 2,
      "jsx-a11y/label-has-for": 2,
      "jsx-a11y/mouse-events-have-key-events": 2,
      "jsx-a11y/role-has-required-aria-props": 2,
      "jsx-a11y/role-supports-aria-props": 2,
      "max-len": 0,
      "newline-per-chained-call": 0,
      "no-confusing-arrow": 0,
      "no-console": 1,
      "no-use-before-define": 0,
      "prefer-template": 2,
      "class-methods-use-this": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-first-prop-new-line": [
        2,
        "multiline"
      ],
      "react/jsx-filename-extension": 0,
      "react/jsx-no-target-blank": 0,
      "react/require-extension": 0,
      "react/self-closing-comp": 0,
      "require-yield": 0,
      "import/no-webpack-loader-syntax": 0
    }
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./__tests__/setup.js"
    ],
    "testRegex": "(/__tests__/.*-test)\\.jsx?$"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote=true --trailing-comma=all --write",
      "git add"
    ]
  },
  "pre-commit": "lint:staged"
}
